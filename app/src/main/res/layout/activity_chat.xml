<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.elfak.simon.diplproba.ChatActivity"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#FFD180">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/listView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center">

        <EditText
            android:id="@+id/messET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enterMes"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/myedittext"
            android:padding="7dp"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:src="@android:drawable/ic_menu_send"
            android:onClick="onSendBtn"
            android:background="@drawable/mybutton"
            android:stateListAnimator="@drawable/my_animator"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="3dp" />
    </LinearLayout>
</LinearLayout>